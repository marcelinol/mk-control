<div class='row'>
  <h2 class='mk-color-on-white'>
    NOVA VENDA
  </h2>
</div>

<%= form_tag action: 'create' do %>
  <div class='row'>
    <div class='column large-4'>
      <h3>Cliente:</h3>
      <%= collection_select(:sale, :customer_id, @customers, :id, :name) %>
      <%= link_to('Criar nova cliente', new_customer_path, class: 'secondary small hollow button') %>
    </div>

    <div class='column large-6'>
      <h3>Data da venda:</h3>
      <p class='large-4'><%= date_field :sale, :created_at, value: Date.today %>
    </div>
  </div>


  <div class='row'>
    <h3>Produtos:</h3>

    <%= collection_check_boxes(:sale, :products_ids, @products, :id, :name) do |b| %>

      <div class='large-5 columns'>
        <%= b.check_box %> <%= b.object.name %>
      </div>
    <% end %>
  </div>

  <div class='row'>
    <%= submit_tag "Criar", class: 'primary button' %>
  </div>
<% end %>
