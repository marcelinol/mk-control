<h1>Dashboard#index</h1>
<div class='row small-up-1 medium-up-2 large-up-3'>

  <div class='column'>
    <div class='callout large'>
      <p align='center' class='subheader'>Balanço</p>
        <h2 align='center'><%= @consultant.balance %></h2>
    </div>
  </div>

  <div class='column'>
    <div class='callout large'>
        <p  class='subheader'>Hoje você precisa falar com:</p>
        <% @consultant.customers.pluck(:name).each do |customer_name| %>
          <p class='lead'><%= customer_name %></p>
        <% end %>
    </div>
  </div>

  <div class='column'>
    <div class='callout large'>
        <%= link_to('NOVA VENDA', new_sale_path, class: 'success hollow expanded button') %>
        <%= link_to('NOVA CLIENTE', new_customer_path, class: 'success hollow expanded button') %>
    </div>
  </div>

</div>
